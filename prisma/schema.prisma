generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  email String @unique

  password   String
  bio        String
  website    String
  avatar     String
  token      String
  updateDate String
  createDate DateTime @default(now())
}

model Follows {
  id          String   @id
  createDate  DateTime @default(now())
  followingId String // user id
  followerId  String // user id
}

